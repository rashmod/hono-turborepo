{
	"extends": "@tasks/typescript-config/base.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"paths": {
			"@/*": ["./src/*"]
		},
		"rootDir": "./src",
		"outDir": "./dist"
	},
	"include": ["./src/**/*"],
	"exclude": ["./node_modules"],

	"tsc-alias": {
		"resolveFullPaths": true
	}
}
